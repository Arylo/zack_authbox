doctype html
html(lang="zh-cn")
    head
        block title
        title #{title}
        link(rel='stylesheet', href='//at.alicdn.com/t/font_1476669536_3056495.css')
        link(rel='stylesheet', href='/stylesheets/lib/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
    body(data-path="#{path}")
        nav.navbar.navbar-inverse(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                a.navbar-brand(href='/pages/index.html') PandoraBox
                #navbar.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li.dropdown
                            a.dropdown-toggle(data-toggle="dropdown" href="#")
                                if user.username
                                    | #{user.username}
                                else
                                    | #{user.eamil}
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/logout') 退出

        .container
            .row
                section
                    .menu.col-md-3.col-sm-3
                        .list-group
                            a.list-group-item(href='/admin/users') 用户管理
                    .col-md-9.col-sm-9
                        block content

        script(src="/javascripts/lib/jquery.min.js")
        script(src="/javascripts/lib/bootstrap.min.js")
        script.
            $(function(){
                var path = $('body').attr('data-path');
                $(".menu").find("a[href='"+path+"']").addClass('active');
            });
        block scripts
