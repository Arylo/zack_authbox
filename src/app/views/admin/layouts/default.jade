doctype html
html(lang="zh-cn")
    head
        block title
        title #{title}
        include ../../includes/css.jade
    body(data-path="#{path}")
        nav.navbar.navbar-inverse(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                a.navbar-brand(href='/pages/index.html') 后台管理
                if admin
                    #navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-right
                            li.dropdown
                                a.dropdown-toggle(data-toggle="dropdown" href="#")
                                    | #{admin.username}
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='/admin/logout') 退出

        .container-fluid
            .messages.row
                include ../../includes/messages.jade

        .container
            .row
                section
                    if admin
                        .menu.col-md-3.col-sm-3
                            .list-group
                                a.list-group-item(href='/admin/users') 用户管理
                        .col-md-9.col-sm-9
                            block content
                    else
                        .col-md-12
                            block content


        include ../../includes/js.jade
        script.
            $(function(){
                var path = $('body').attr('data-path');
                $(".menu").find("a[href='"+path+"']").addClass('active');
            });
        block scripts
